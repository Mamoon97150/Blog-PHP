{% extends 'layout/layout.twig' %}
{% block header %} class = "header-top" {% endblock %}
{% block main %}

    <section id="blog" class="blog section-show">
        <div class="container">
            <div class="section-title">
                <h2>Blog</h2>
                <p>My Posts</p>
            </div>

            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="blog-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-app">App</li>
                        <li data-filter=".filter-card">Card</li>
                        <li data-filter=".filter-web">Web</li>
                    </ul>
                </div>
            </div>

            <div class="row blog-container">
                {% for post in posts %}
                    <div class="col-lg-4 col-md-6 blog-item filter-app">
                        <div class="blog-wrap">
                            <p>{{ post.user.username }}</p>
                            <img src="{{ post.img }}" class="img-fluid" alt="">
                            <div class="blog-info">
                                <h4>{{ post.title }}</h4>
                                <p>{{ post.category.name }}</p>
                                <div class="blog-links">
                                    <a href="{{ post.img }}" data-gallery="blogGallery" class="blog-lightbox" title="App 1"><i class="bx bx-plus"></i></a>
                                    <a href="{{ route('blog.show', {'id':post.id}) }}" data-gallery="blogDetailsGallery" data-glightbox="type: external" class="blog-details-lightbox" title="blog Details"><i class="bx bx-link"></i></a>
                                </div>
                            </div>
                            <div>
                                <h5>{{ post.title }}</h5>
                                <p><em>Last updated on {{ post.dateUpdated | format_datetime() }}</em></p>
                                <p>
                                    {{ post.hook }}
                                </p>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>

        </div>
    </section><!-- End blog Section -->


{% endblock %}