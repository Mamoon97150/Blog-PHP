    <body>

        <!-- ======= Header ======= -->
        <header id="header" {% block header %} {% endblock %}>
            <div class="container">

                <h1><a href="{{ route('home.show') }}">Djamina Marboeuf</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <h2>I'm a passionate <span class="typed" data-typed-items="developer, freelancer, geek"></span> from Saint-Martin</h2>

                <nav id="navbar" class="navbar">
                    <ul>
                        <li><a class="nav-link active" href="{{ route('home.show') }}">Home</a></li>
                        <li><a class="nav-link" href="{{ route('home.show') }}#about">About</a></li>
                        <li><a class="nav-link" href="{{ route('home.show') }}#resume">Resume</a></li>
                        <li><a class="nav-link" href="{{ route('blog.index') }}#blog">Blog</a></li>
                        <li><a class="nav-link" href="{{ route('home.show') }}#contact">Contact</a></li>

                        {% if auth.status == empty %}
                            <li><a class="nav-link" href="{{ route('user.login') }}" ><i class="bi bi-person-check" style="font-size: 1.5em"></i></a></li>
                        {% else %}
                            <li><a class="nav-link" href="{{ route('user.logout') }}" ><i class="bi bi-person-x" style="font-size: 1.5em"></i></a></li>
                        {% endif %}

                    </ul>

                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->

                <div class="social-links">
                    <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>

            </div>
        </header><!-- End Header -->
        {% block main %}

        {% endblock %}

        <div class="credits">
            {% if auth.status == null %}
                <a class="float-start " href="{{ route('user.login') }}" >Sign In</a>
            {% elseif auth.status == "admin" %}
                <a class="float-start " href="{{ route('admin.index') }}" >Dashboard</a>
            {% else %}
                <a class="float-start" href="{{ route('user.logout') }}" >Sign Out</a>
            {% endif %}
